                        <Button CommonNavigationTransitionInfo.IsStaggerElement="True" Background="#ffee00" FontSize="30" Content="Financial Aid" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontWeight="Light"/>
                    </Grid>
                </RelativePanel>
            </Grid>
        </RelativePanel>
    </Grid>
</Page>
