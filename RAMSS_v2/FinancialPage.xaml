                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button CommonNavigationTransitionInfo.IsStaggerElement="True" FontSize="20" Background="#ffdc00" Content="T4A Inquiry" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontWeight="Light"/>
